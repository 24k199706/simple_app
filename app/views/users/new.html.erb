<% provide(:title, '新規登録') %>
<h1>新規登録</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user , url: create_path) do |f| %>
        <div class="mb-3"> 
          <%= f.label :"ユーザ名" %><span class="badge badge-danger">必須</span>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :"メールアドレス" %><span class="badge badge-danger">必須</span>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :"パスワード" %><span class="badge badge-danger">必須</span>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :password_confirmation, "確認用パスワード" %><span class="badge badge-danger">必須</span>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <label>秘密の質問<span class="badge badge-danger">必須</span></label>
          <select class="form-control" name="user[reset_question]">
            <% Password_Question.all.each do |q| %>
              <option value="<%= q.id %>"><%= q.name %></option>
            <% end %>
          </select>
        </div>
        <div class="mb-3">
          <label>秘密の答え<span class="badge badge-danger">必須</span></label>
          <input type="text" class="form-control" name="user[reset_answer]" >
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>