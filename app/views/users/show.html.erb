<h1></h1>
  <%=  gravatar_for current_user %>
<%= @user.name %>
<% if current_user.id ==@user.id %>
  <%= link_to "編集", edit_path(current_user) %><br>
<% end %>
<h6><%= @user.content %><h6>
<h3>過去の投稿履歴</h3>
  <table class="table table-hover">
        <tbody>
            <% @user.posts.each do |post| %>
                <tr>
                <td><h6><%= link_to post.title , posts_edit_path(post) %><h6>
                <%= post.content %></td>
                </tr>
                
            <% end %>
        </tbody>
  </table>