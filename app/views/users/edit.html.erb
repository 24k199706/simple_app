<div class="container marketing">
    <div class="row featurette">
        <div class="col-md-7 order-md-2">
            <div class="mb-3">
                <div class="col-md-6 col-md-offset-3">
                    <%= form_for(@user,url:update_path) do |f| %>
                    <%= f.label :"画像の変更" %>
                    <%= f.file_field :image , id: :@user_image %><br>
                    <%= f.label :"ユーザ名" %>
                    <%= f.text_field :name, class: 'form-control' %>
                    <%= f.label :"メールアドレス" , class: "form-label" %>
                    <%= f.text_field :email, class: 'form-control' %>
                    <%= f.label :"パスワード更新" %>
                    <%= f.password_field :password, class: 'form-control' %>
                    <%= f.label :"パスワード確認用" %>
                    <%= f.password_field :password_confirmation, class: 'form-control' %>
                    <%= f.label :"自己紹介" %>
                    <div class="mb-3">  
                    <textarea placeholder="ここに何か入力してね" class="form-control" name="post[content]" id="exampleFormControlTextarea1" rows="10"></textarea>
                    </div>
                    <%= f.submit "更新", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
     
