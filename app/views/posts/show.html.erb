<main class="container">
    <div class="starter-template  py-5 px-3">
        <h3><%= @post.title %></h3>

        <%if @post.image.url %>
            <%= image_tag @post.image.url , :size =>"320x240" %>
        <% else %>
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
        <% end %>
        <% if current_user.id == @post.user_id %>
            <%= link_to "編集" , posts_edit_path(@post) %>
            <%= link_to "delete", @post, method: :delete,
                                       data: { confirm: "本当に投稿を削除しますか？" } %>
        <% end %>
        <div class="card-body">
            <p class="card-text"><%= @post.content %></p>
        <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
        </div>
        </div>
        <% if current_user.liked_by?(@post,nil) %>
            <%= link_to 'いいねを外す', like_destory_path(@post,current_user.id), method: :DELETE %><br>
        <% else %>
            <%= link_to 'いいね', like_post_creat_path(@post,current_user.id), method: :POST %><br>
        <% end %>
        <small class="text-muted"><%=@post.created_at %></small>
    </div>

    <div>
        <table class="table" >
                <tr>
                    <% @post.comments.each do |comment| %>
                    <% if comment.user_id == current_user.id %>
                            <% if comment.resign !=true %>
                                    <td><%= link_to "delete", comment_delete_path(comment.id) , method: :delete,
                                       data: { confirm: "返信を削除しますか？" } %>
            
                                    <%= comment.comment_content %>|<%= link_to(comment.user.name,mypage_path) %>
                            <% end %></td>
                    <% end %>
                    <% end %>
                </tr>    
        </table>
    </div>
    <%= form_for @comment , url: comment_creat_path do |f|  %>
        <textarea aria-label="コメントを追加…" placeholder="コメントを追加…" class="Ypffh"name="comment[comment_content]" autocomplete="off" autocorrect="off" style="height: 30px !important;"></textarea>
        <input type="hidden" name="comment[post_id]" value="<%=@post.id %>">
        <input type="hidden" name="comment[user_id]" value="<%=current_user.id %>">
        <%= f.submit %>        
    <% end %>
</main>