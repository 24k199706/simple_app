<% if current_user.liked_by?(@post,nil) %>
            <i class="fa fa-heart unlike-btn">
            <%= link_to 'いいねを外す', like_destroy_path(@post,current_user.id), class: "like-link", method: :delete, remote: true %> <%=@post.likes.count %><br>
            </i>
<% else %>
            <i class="fa fa-heart like-btn">
            <%= link_to 'いいね', like_post_creat_path(@post,current_user.id), method: :post, remote: true %> <%=@post.likes.count %><br>
            </i>
<% end %>