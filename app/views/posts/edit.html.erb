<title>投稿編集画面</title>
    <main class="container">
        <div class="starter-template text-center py-5 px-3">
            <%= form_for(@post) do |f| %>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">投稿画像</label>
                <%= f.file_field :image %><br>
            </div>
            <%= image_tag @post.image.url id: :image_prv if @post.image? %>
            <p><%= f.check_box :remove_image %>画像を削除する</p>
                <div class="mb-3">
                    <%= f.text_area :title , class: "form-control" %>
                </div>
                <div class="mb-3">
                    <textarea  class="form-control exampleFormControlTextarea1" name="post[content]"  rows="20"></textarea>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <%= f.submit "更新", class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
    </main>
