<H1>新規投稿画面</H1>
<main class="container">
    <div class="starter-template text-center py-5 px-3">
        <%= form_for(@post) do |f| %>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label" >投稿画像</label>
                <%= f.file_field :image %><br>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">タイトル</label>
                <textarea  id="text" placeholder="タイトルを入れてね" class="form-control" id="title" name="post[title]"></textarea><br>            
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">本文</label>
                <textarea  placeholder="ここに何か入力してね" class="form-control exampleFormControlTextarea1" name="post[content]"  rows="20"></textarea>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">ハッシュタグ入力欄</label>
                <textarea id="text1" placeholder="ハッシュタグを入れてね" class="form-control" id="title" name="tag[name]"></textarea><br>            
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input type="submit" id="btn" name="commit" value="新規投稿" class="btn btn-primary" data-disable-with="新規投稿"  >
            </div>
        <% end %>
    </div>
</main>
<script>
const titletext=document.getelementbyid("text");
const titletext2=document.getelementbyid("text1");
const bottn=document.getelementbyid("btn");
bttn.addEventListener('click', () => {
if titletext=""{
    alert("タイトルを入力してください");
}
if titletext2=""{
    alert("投稿内容を入力してください");
}
})
</script>