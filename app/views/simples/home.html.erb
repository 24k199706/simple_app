<title>Letter traveler</title>
<!--ログインしているときの処理 -->
<% if logged_in? %>
    <main class="container">
        <div class="starter-template  py-5 px-3">
            <table class="table table-hover" >
        </div>
            <tbody>
                    <% @post.each do |post| %>
                    <tr>
                        <!--名前を表示させて、投稿した人のプロフィール画面に飛ばすリンク-->
                        <div class="d-flex text-muted pt-3">
                            <td><% if post.user.image.url %>
                                <%= image_tag post.user.image.url , :size =>'32x32' %>    
                            <% else %>
                                <%= gravatar_for current_user %>
                            <% end %>
                            <%= link_to post.user.name ,user_path(post.user.name) %>
                            <%if post.image.url %>
                                <%= image_tag post.image.url , :size =>'200x200' %>
                            <% end %>
                            <%= link_to post.title , posts_show_path(post) %>
                            <%= post.content %></td>
                        </div>
                    </tr>
                    <% end %>
                    
            </tbody>
            </table>
        
        
<% else %>
<!--ログインしていないときの画面表示-->
    ホーム画面
    </main>
<% end %>